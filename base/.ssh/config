Host uw
	HostName ubuntu1404.student.cs.uwaterloo.ca

Host work
	HostName 129.97.171.114
	User kzlcolfo
	ForwardAgent yes

Host *.uwaterloo.ca
	User kzlcolfo

Host *.kcolford.com
	ForwardAgent yes

Host *
	AddKeysToAgent yes
	CanonicalizeHostname yes
	CanonicalDomains kcolford.com uwaterloo.ca
	NoHostAuthenticationForLocalhost yes
	ServerAliveInterval 15
	TCPKeepAlive yes
	VerifyHostKeyDNS ask

Match canonical exec "kr restart"
	IdentityAgent %d/.kr/krd-agent.sock
	ProxyCommand krssh %h %p
