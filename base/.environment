# -*- mode: sh -*-

# installation prefix
export PREFIX="$HOME/.local"

# some environment paths
export GOPATH="$PREFIX"
export NPM_CONFIG_PREFIX="$PREFIX"
export PIP_USER=true

# basic settings
export BROWSER="chromium"
export EDITOR="${EDITOR:-emacsclient}"
export TEXEDIT="$EDITOR +%d %s"
export LESS=FRSXi
export DIFFPROG="diff -aur"

# XDG stuff
# shellcheck disable=SC1090
. "${XDG_CONFIG_HOME:-$HOME/.config}"/user-dirs.dirs 2> /dev/null
