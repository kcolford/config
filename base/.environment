# -*- mode: sh -*-

# installation prefix
export PREFIX="$HOME/.local"

# some environment paths
export GOPATH="$PREFIX"
export NPM_CONFIG_PREFIX="$PREFIX"
export PIP_USER=true

# basic settings
export BROWSER="chromium"
export EMACS_SERVER="${EMACS_SERVER:-server}" ALTERNATE_EDITOR=
export EDITOR="emacsclient -s $EMACS_SERVER"
export TEXEDIT="$EDITOR +%d %s"
export LESS=FRSXi
export DIFFPROG="diff -aur"
export PAGER=less

# XDG stuff
# shellcheck disable=SC1090
. "${XDG_CONFIG_HOME:-$HOME/.config}"/user-dirs.dirs > /dev/null 2>&1
